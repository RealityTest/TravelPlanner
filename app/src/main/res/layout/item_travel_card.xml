<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="180dp"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_gravity="center_horizontal"
  android:layout_marginTop="16dp"
  app:cardCornerRadius="8dp"
  app:layout_constraintTop_toBottomOf="@id/place_autocomplete_fragment">
    <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <ImageView
        android:id="@+id/imageView_place_photo"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
      <TextView
        android:id="@+id/text_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imageView_place_photo"
        app:layout_constraintStart_toStartOf="@id/imageView_place_photo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="28sp"
        android:textColor="#FFFFFF"/>
      <TextView
        android:id="@+id/text_attribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="#c4c4c4"
        app:layout_constraintBottom_toBottomOf="@id/imageView_place_photo"
        app:layout_constraintEnd_toEndOf="@id/imageView_place_photo"/>
    </android.support.constraint.ConstraintLayout>
  </android.support.v7.widget.CardView>

